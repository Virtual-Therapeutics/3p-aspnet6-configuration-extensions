root = true

[*]
charset = utf-8
end_of_line = lf

[*.cs]
# stop Visual Studio from inserting BOMs into utf-8 files.
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{csproj,sln}]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf

